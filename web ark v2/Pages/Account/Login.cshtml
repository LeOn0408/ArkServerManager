@page
@model ArkWeb.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Авторизация";
}
<div class="loginpage">
    <div class="loginform">
        @*<component type="typeof(Components.App)" render-mode="ServerPrerendered" />
        <script src="_framework/blazor.server.js"></script>*@
        <form id="account" method="post">
            
            
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                
                <input asp-for="Input.Login" class="form-control" placeholder="Имя пользователя"/>
                <br>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Пароль" />
                <br>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
            <div class="form-group">
                @*<p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a> 
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
                </p>*@
                @*<p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>*@
            </div>
        </form>
    </div>
</div>