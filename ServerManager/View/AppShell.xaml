<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ServerManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ServerManager.View"
    xmlns:vm="clr-namespace:ServerManager.ViewModel"
    Title="Server Manager">

    <Shell.BindingContext>
        <vm:AppShellViewModel></vm:AppShellViewModel>
    </Shell.BindingContext>
    <TabBar Title="Выберите сервер">
        <Tab Title="Ark">
            <ShellContent
                ContentTemplate="{DataTemplate local:ArkPage}"/>
        </Tab>
        <Tab Title="Minecraft">
            <ShellContent
                ContentTemplate="{DataTemplate local:MinecraftPage}" />
        </Tab>
    </TabBar>
    

</Shell>
